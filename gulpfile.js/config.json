{
    "root": {
        "src": "./src",
        "dest": "./public"
    },

    "tasks": {
        "browserSync": {
            "server": {
                "baseDir": "public"
            }
        },

        "static": {
            "src": "static",
            "dest": "./"
        },

        "js": {
            "src": "scripts",
            "dest": "scripts",
            "extractSharedJs": true,
            "entries": {
                "app": ["./main.jsx"],
                "page": ["./page.js"],
                "vendor": ["react"]
            },
            "extensions": ["js", "jsx"]
        },

        "css": {
            "src": "styles",
            "dest": "styles",
            "autoprefixer": {
                "browsers": ["last 3 version"]
            },
            "sass": {
                "indentedSyntax": false
            },
            "extensions": ["sass", "scss", "css"]
        },

        "html": {
            "src": "html",
            "dest": "./",
            "dataFile": "data/global.json",
            "htmlmin": {
                "collapseWhitespace": true
            },
            "extensions": ["html", "json"],
            "excludeFolders": ["layouts", "shared", "macros", "data"]
        },

        "images": {
            "src": "images",
            "dest": "images",
            "extensions": ["jpg", "png", "svg", "gif"]
        },

        "fonts": {
            "src": "fonts",
            "dest": "fonts",
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },

        "iconFont": {
            "src": "icons",
            "dest": "fonts",
            "sassDest": "generated",
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },

        "svgSprite": {
            "src": "sprites",
            "dest": "images",
            "extensions": ["svg"]
        }
    }
}
